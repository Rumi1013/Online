{%- comment -%}
  MIDNIGHT MAGNOLIA THEME
  Article Template - Individual Blog Post
{%- endcomment -%}

<article class="article-page celestial-bg">

  {%- comment -%} Article Header {%- endcomment -%}
  <header class="article-header section--large">
    <div class="container">
      <div class="article-breadcrumb animate-fade-in-up">
        <a href="{{ blog.url }}" class="breadcrumb-link">‚Üê Back to Midnight Musings</a>
      </div>

      <div class="article-meta animate-fade-in-up" style="animation-delay: 0.1s;">
        <time class="article-date" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
          {{ article.published_at | date: '%B %d, %Y' }}
        </time>
        <div class="reading-time">
          {{ article.content | strip_html | split: ' ' | size | divided_by: 200 | at_least: 1 }} min read
        </div>
      </div>

      <h1 class="article-title animate-fade-in-up" style="animation-delay: 0.2s;">
        {{ article.title }}
      </h1>

      {%- if article.excerpt != blank -%}
        <div class="article-excerpt animate-fade-in-up" style="animation-delay: 0.3s;">
          {{ article.excerpt }}
        </div>
      {%- endif -%}

      {%- if article.tags.size > 0 -%}
        <div class="article-tags animate-fade-in-up" style="animation-delay: 0.4s;">
          {%- for tag in article.tags -%}
            <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="tag">{{ tag }}</a>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </header>

  {%- comment -%} Featured Image {%- endcomment -%}
  {%- if article.image -%}
    <section class="article-image-section">
      <div class="container">
        <div class="article-featured-image animate-fade-in-up">
          <img src="{{ article.image | img_url: '1200x600' }}"
               alt="{{ article.image.alt | default: article.title }}"
               loading="lazy">
          <div class="image-overlay"></div>
        </div>
      </div>
    </section>
  {%- endif -%}

  {%- comment -%} Article Content {%- endcomment -%}
  <section class="article-content-section section">
    <div class="container">
      <div class="article-layout">

        {%- comment -%} Main Content {%- endcomment -%}
        <div class="article-main">
          <div class="article-content rte animate-fade-in-up">
            {{ article.content }}
          </div>

          {%- comment -%} Article Footer {%- endcomment -%}
          <footer class="article-footer animate-fade-in-up">
            <div class="article-share">
              <h4>Share This Musing</h4>
              <div class="share-buttons">
                <a href="https://twitter.com/intent/tweet?text={{ article.title | url_encode }}&url={{ shop.url }}{{ article.url }}"
                   target="_blank"
                   rel="noopener"
                   class="share-btn share-twitter">
                  <span class="share-icon">üê¶</span>
                  Twitter
                </a>
                <a href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ article.url }}"
                   target="_blank"
                   rel="noopener"
                   class="share-btn share-facebook">
                  <span class="share-icon">üìò</span>
                  Facebook
                </a>
                <a href="https://pinterest.com/pin/create/button/?url={{ shop.url }}{{ article.url }}&description={{ article.title | url_encode }}"
                   target="_blank"
                   rel="noopener"
                   class="share-btn share-pinterest">
                  <span class="share-icon">üìå</span>
                  Pinterest
                </a>
                <button class="share-btn share-copy" onclick="copyToClipboard('{{ shop.url }}{{ article.url }}')">
                  <span class="share-icon">üîó</span>
                  Copy Link
                </button>
              </div>
            </div>

            <div class="article-author">
              <div class="author-avatar">
                <div class="avatar-placeholder">üå∏</div>
              </div>
              <div class="author-info">
                <h4>Written with love</h4>
                <p>From the Midnight Magnolia sanctuary, where Southern Gothic meets spiritual awakening in the quiet hours of transformation.</p>
              </div>
            </div>
          </footer>
        </div>

        {%- comment -%} Sidebar {%- endcomment -%}
        <aside class="article-sidebar">

          {%- comment -%} Newsletter Signup {%- endcomment -%}
          <div class="sidebar-card magnolia-card animate-fade-in-up">
            <div class="card-icon">üì¨</div>
            <h3>Join the Circle</h3>
            <p>Receive sacred wisdom and lunar guidance delivered to your inbox.</p>
            <form class="newsletter-form" action="#" method="post">
              <input type="email" name="email" placeholder="Your email" required class="newsletter-input">
              <button type="submit" class="btn btn--primary btn--small">Subscribe</button>
            </form>
          </div>

          {%- comment -%} Related Categories {%- endcomment -%}
          <div class="sidebar-card magnolia-card animate-fade-in-up" style="animation-delay: 0.1s;">
            <h3>Sacred Categories</h3>
            <div class="category-links">
              <a href="{{ blog.url }}?tag=moon-cycles" class="category-link">
                <span class="category-icon">üåô</span>
                Moon Cycles
              </a>
              <a href="{{ blog.url }}?tag=productivity" class="category-link">
                <span class="category-icon">‚ú®</span>
                Sacred Productivity
              </a>
              <a href="{{ blog.url }}?tag=healing" class="category-link">
                <span class="category-icon">üåø</span>
                Healing Journey
              </a>
              <a href="{{ blog.url }}?tag=divination" class="category-link">
                <span class="category-icon">üîÆ</span>
                Divination
              </a>
            </div>
          </div>

          {%- comment -%} Featured Products {%- endcomment -%}
          <div class="sidebar-card magnolia-card animate-fade-in-up" style="animation-delay: 0.2s;">
            <h3>Sacred Tools</h3>
            <div class="featured-products">
              <div class="featured-product">
                <div class="product-icon">üìî</div>
                <div class="product-info">
                  <h4>The Magnolia Reset</h4>
                  <p>Healing journal for transformation</p>
                  <a href="/collections/healing-journals" class="product-link">Explore</a>
                </div>
              </div>
              <div class="featured-product">
                <div class="product-icon">üîÆ</div>
                <div class="product-info">
                  <h4>Midnight Messages</h4>
                  <p>Tarot deck for divine guidance</p>
                  <a href="/collections/tarot-divination" class="product-link">Explore</a>
                </div>
              </div>
            </div>
          </div>

        </aside>
      </div>
    </div>
  </section>

  {%- comment -%} Related Articles {%- endcomment -%}
  {%- if blog.articles.size > 1 -%}
    <section class="related-articles section celestial-bg">
      <div class="container">
        <h2 class="section-title text-center animate-fade-in-up">More Midnight Musings</h2>

        <div class="related-grid grid grid--3-col">
          {%- assign related_articles = blog.articles | where: 'id', '!=', article.id | limit: 3 -%}
          {%- for related_article in related_articles -%}
            <article class="related-card magnolia-card animate-fade-in-up" style="animation-delay: {{ forloop.index | times: 0.1 }}s;">

              {%- if related_article.image -%}
                <div class="related-image">
                  <a href="{{ related_article.url }}">
                    <img src="{{ related_article.image | img_url: '300x200' }}"
                         alt="{{ related_article.image.alt | default: related_article.title }}"
                         loading="lazy">
                  </a>
                </div>
              {%- endif -%}

              <div class="related-content">
                <div class="related-meta">
                  <time datetime="{{ related_article.published_at | date: '%Y-%m-%d' }}">
                    {{ related_article.published_at | date: '%b %d' }}
                  </time>
                </div>

                <h3 class="related-title">
                  <a href="{{ related_article.url }}">{{ related_article.title }}</a>
                </h3>

                <div class="related-excerpt">
                  {{ related_article.content | strip_html | truncate: 100 }}
                </div>

                <a href="{{ related_article.url }}" class="read-more-link">
                  Read More ‚Üí
                </a>
              </div>
            </article>
          {%- endfor -%}
        </div>
      </div>
    </section>
  {%- endif -%}

  {%- comment -%} Comments Section {%- endcomment -%}
  {%- if blog.moderated? and article.moderated? -%}
    <section class="comments-section section">
      <div class="container">
        <div class="comments-wrapper">
          <h2 class="comments-title animate-fade-in-up">Sacred Reflections</h2>
          <p class="comments-subtitle animate-fade-in-up" style="animation-delay: 0.1s;">
            Share your thoughts and wisdom with the community
          </p>

          {%- paginate article.comments by 5 -%}
            {%- if article.comments.size > 0 -%}
              <div class="comments-list animate-fade-in-up" style="animation-delay: 0.2s;">
                {%- for comment in article.comments -%}
                  <div class="comment magnolia-card">
                    <div class="comment-header">
                      <div class="comment-author">
                        <div class="author-avatar">{{ comment.author | slice: 0 }}</div>
                        <div class="author-name">{{ comment.author }}</div>
                      </div>
                      <time class="comment-date" datetime="{{ comment.created_at | date: '%Y-%m-%d' }}">
                        {{ comment.created_at | date: '%B %d, %Y' }}
                      </time>
                    </div>
                    <div class="comment-content">
                      {{ comment.content }}
                    </div>
                  </div>
                {%- endfor -%}
              </div>

              {%- if paginate.pages > 1 -%}
                <div class="comments-pagination">
                  {{ paginate | default_pagination }}
                </div>
              {%- endif -%}
            {%- endif -%}
          {%- endpaginate -%}

          {%- comment -%} Comment Form {%- endcomment -%}
          <div class="comment-form-wrapper animate-fade-in-up" style="animation-delay: 0.3s;">
            {% form 'new_comment', article %}
              <h3>Leave a Sacred Reflection</h3>

              {%- if form.posted_successfully? -%}
                <div class="form-success">
                  <p>Thank you for sharing your wisdom! Your comment will appear after moderation.</p>
                </div>
              {%- endif -%}

              {%- if form.errors -%}
                <div class="form-errors">
                  {{ form.errors | default_errors }}
                </div>
              {%- endif -%}

              <div class="form-row">
                <div class="form-group">
                  <label for="CommentAuthor">Name *</label>
                  <input type="text"
                         name="comment[author]"
                         id="CommentAuthor"
                         value="{{ form.author }}"
                         required>
                </div>
                <div class="form-group">
                  <label for="CommentEmail">Email *</label>
                  <input type="email"
                         name="comment[email]"
                         id="CommentEmail"
                         value="{{ form.email }}"
                         required>
                </div>
              </div>

              <div class="form-group">
                <label for="CommentBody">Your Reflection *</label>
                <textarea name="comment[body]"
                          id="CommentBody"
                          rows="6"
                          required>{{ form.body }}</textarea>
              </div>

              <button type="submit" class="btn btn--primary">
                Share Reflection
              </button>
            {% endform %}
          </div>
        </div>
      </div>
    </section>
  {%- endif -%}

</article>

<script>
  function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
      // Show success message
      const button = event.target.closest('.share-copy');
      const originalText = button.innerHTML;
      button.innerHTML = '<span class="share-icon">‚úì</span>Copied!';
      setTimeout(() => {
        button.innerHTML = originalText;
      }, 2000);
    });
  }
</script>

