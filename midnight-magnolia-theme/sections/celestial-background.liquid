<section class="celestial-background-section" {{ section.settings.custom_css | style }}>
  <div class="celestial-overlay">
    <!-- Main celestial background -->
    <div class="celestial-main-bg">
      {{ 'celestial-bg.svg' | asset_url | image_tag:
        width: '1920',
        height: '1080',
        alt: '',
        class: 'celestial-bg-svg',
        loading: 'eager'
      }}
    </div>

    <!-- Enhanced star field -->
    <div class="enhanced-stars" aria-hidden="true">
      {% for i in (1..20) %}
        <div class="star star-{{ i }}" style="
          left: {{ 1 | times: 100 | random }}%;
          top: {{ 1 | times: 100 | random }}%;
          animation-delay: {{ i | times: 0.2 }}s;
          animation-duration: {{ 2 | plus: i | times: 0.1 }}s;
        "></div>
      {% endfor %}
    </div>

    <!-- Mystical energy waves -->
    <div class="energy-waves" aria-hidden="true">
      {% for i in (1..3) %}
        <div class="energy-wave wave-{{ i }}" style="animation-delay: {{ i | times: 2 }}s;"></div>
      {% endfor %}
    </div>
  </div>

  <!-- Section content -->
  <div class="celestial-content">
    <div class="container">
      {% if section.settings.title != blank %}
        <h2 class="celestial-title">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="celestial-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      {% if section.settings.show_cta and section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_link }}" class="btn btn--primary celestial-cta">
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
.celestial-background-section {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.celestial-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.celestial-main-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.celestial-bg-svg {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.7;
  animation: celestialPulse 20s ease-in-out infinite;
}

.enhanced-stars {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.star {
  position: absolute;
  width: 2px;
  height: 2px;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  animation: starTwinkle 3s ease-in-out infinite;
}

.star:nth-child(odd) {
  background: rgba(246, 213, 92, 0.6);
  width: 3px;
  height: 3px;
}

.star:nth-child(3n) {
  background: rgba(159, 122, 234, 0.5);
  width: 1.5px;
  height: 1.5px;
}

.energy-waves {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.energy-wave {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200px;
  height: 200px;
  border: 1px solid rgba(246, 213, 92, 0.2);
  border-radius: 50%;
  animation: energyExpand 8s ease-out infinite;
}

.wave-2 {
  width: 300px;
  height: 300px;
  border-color: rgba(159, 122, 234, 0.15);
  animation-duration: 10s;
}

.wave-3 {
  width: 400px;
  height: 400px;
  border-color: rgba(163, 177, 138, 0.1);
  animation-duration: 12s;
}

.celestial-content {
  position: relative;
  z-index: 2;
  text-align: center;
  color: var(--color-magnolia-white);
}

.celestial-title {
  font-size: clamp(2.5rem, 5vw, 4rem);
  margin-bottom: 1rem;
  background: linear-gradient(135deg, var(--color-magnolia-white) 0%, var(--color-gold) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 0 30px rgba(246, 213, 92, 0.3);
}

.celestial-subtitle {
  font-size: clamp(1.125rem, 2vw, 1.5rem);
  margin-bottom: 2rem;
  opacity: 0.9;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  line-height: 1.6;
}

.celestial-cta {
  margin-top: 1rem;
  box-shadow: 0 8px 32px rgba(246, 213, 92, 0.3);
}

@keyframes celestialPulse {
  0%, 100% {
    opacity: 0.6;
    transform: scale(1);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.02);
  }
}

@keyframes starTwinkle {
  0%, 100% {
    opacity: 0.3;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.5);
  }
}

@keyframes energyExpand {
  0% {
    transform: translate(-50%, -50%) scale(0);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(2);
    opacity: 0;
  }
}

@media (max-width: 768px) {
  .celestial-background-section {
    min-height: 80vh;
  }

  .celestial-title {
    font-size: 2.5rem;
  }

  .celestial-subtitle {
    font-size: 1.125rem;
  }
}

@media (prefers-reduced-motion: reduce) {
  .celestial-bg-svg,
  .star,
  .energy-wave {
    animation: none;
  }
}
</style>

{% schema %}
{
  "name": "Celestial Background",
  "tag": "section",
  "class": "celestial-background-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Welcome to Midnight Magnolia"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover the mystical world of spiritual wellness and celestial guidance"
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Show call to action",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA text",
      "default": "Enter the Garden"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA link"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Custom CSS"
    }
  ],
  "presets": [
    {
      "name": "Celestial Background"
    }
  ]
}
{% endschema %}