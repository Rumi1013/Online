<!-- Moon Phase Indicator -->
<div class="moon-phase-indicator" role="status" aria-label="Current moon phase">
  <div class="moon-phase-display">
    {{ 'moon-phases.svg' | asset_url | image_tag:
      width: '400',
      height: '50',
      alt: 'Moon phases',
      class: 'moon-phases-svg'
    }}
    <div class="current-phase-marker" id="current-phase-marker"></div>
  </div>

  <div class="phase-info">
    <div class="phase-name" id="phase-name">Full Moon</div>
    <div class="phase-description" id="phase-description">A time of manifestation and completion</div>
  </div>
</div>

<!-- Constellation Display -->
<div class="constellation-display" aria-hidden="true">
  {{ 'stars.svg' | asset_url | image_tag:
    width: '300',
    height: '300',
    alt: '',
    class: 'constellation-svg'
  }}
</div>

<style>
.moon-phase-indicator {
  position: fixed;
  top: 20px;
  right: 20px;
  background: rgba(10, 25, 47, 0.9);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(250, 243, 224, 0.2);
  border-radius: 16px;
  padding: 1rem;
  z-index: 100;
  max-width: 280px;
  box-shadow: 0 8px 32px rgba(10, 25, 47, 0.4);
  transition: all 0.3s ease;
}

.moon-phase-indicator:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 48px rgba(10, 25, 47, 0.6);
}

.moon-phase-display {
  position: relative;
  margin-bottom: 0.75rem;
}

.moon-phases-svg {
  width: 100%;
  height: auto;
  filter: drop-shadow(0 2px 8px rgba(246, 213, 92, 0.3));
}

.current-phase-marker {
  position: absolute;
  top: 0;
  left: 0;
  width: 50px;
  height: 50px;
  border: 2px solid var(--color-gold);
  border-radius: 50%;
  background: rgba(246, 213, 92, 0.1);
  transition: all 0.5s ease;
  box-shadow: 0 0 20px rgba(246, 213, 92, 0.4);
  animation: phaseGlow 3s ease-in-out infinite alternate;
}

.phase-info {
  text-align: center;
}

.phase-name {
  color: var(--color-gold);
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 0.25rem;
  text-shadow: 0 0 8px rgba(246, 213, 92, 0.3);
}

.phase-description {
  color: var(--color-magnolia-white);
  font-size: 0.875rem;
  opacity: 0.8;
  line-height: 1.3;
}

.constellation-display {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  opacity: 0.1;
  pointer-events: none;
  z-index: -1;
  animation: constellationRotate 60s linear infinite;
}

.constellation-svg {
  width: 300px;
  height: 300px;
  filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.1));
}

@keyframes phaseGlow {
  0% {
    box-shadow: 0 0 20px rgba(246, 213, 92, 0.4);
    transform: scale(1);
  }
  100% {
    box-shadow: 0 0 30px rgba(246, 213, 92, 0.6);
    transform: scale(1.05);
  }
}

@keyframes constellationRotate {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(360deg); }
}

@media (max-width: 768px) {
  .moon-phase-indicator {
    position: static;
    margin: 1rem;
    max-width: none;
  }

  .constellation-display {
    display: none;
  }
}

@media (prefers-reduced-motion: reduce) {
  .current-phase-marker {
    animation: none;
  }

  .constellation-display {
    animation: none;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const moonPhases = [
    { name: 'New Moon', description: 'A time of new beginnings and setting intentions' },
    { name: 'Waxing Crescent', description: 'Building energy and planting seeds' },
    { name: 'First Quarter', description: 'Taking action and overcoming challenges' },
    { name: 'Waxing Gibbous', description: 'Refining and adjusting course' },
    { name: 'Full Moon', description: 'Manifestation and completion' },
    { name: 'Waning Gibbous', description: 'Gratitude and sharing abundance' },
    { name: 'Last Quarter', description: 'Release and letting go' },
    { name: 'Waning Crescent', description: 'Rest and reflection' }
  ];

  // Calculate current moon phase (simplified)
  const now = new Date();
  const moonCycle = 29.5; // days
  const newMoon = new Date('2024-01-01'); // Reference new moon
  const daysSinceNewMoon = Math.floor((now - newMoon) / (1000 * 60 * 60 * 24));
  const currentPhaseIndex = Math.floor((daysSinceNewMoon % moonCycle) / (moonCycle / 8));

  const currentPhase = moonPhases[currentPhaseIndex];
  const marker = document.getElementById('current-phase-marker');
  const phaseName = document.getElementById('phase-name');
  const phaseDescription = document.getElementById('phase-description');

  if (marker && phaseName && phaseDescription) {
    // Position marker based on current phase
    const position = (currentPhaseIndex * 50) + 25; // 50px per phase, center at 25px
    marker.style.left = position + 'px';

    // Update phase info
    phaseName.textContent = currentPhase.name;
    phaseDescription.textContent = currentPhase.description;
  }
});
</script>